<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/number_editTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_edit_myprofile_background"
                android:gravity="center|left"
                android:inputType="text"
                android:maxLength="10"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:hint="Please Enter Number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/alternatenumber_editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_edit_myprofile_background"
                android:gravity="center|left"
                android:hint="Please Enter Alternate Number"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_marginHorizontal="@dimen/_30sdp"
               android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/address_editTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:background="@drawable/ic_edit_myprofile_background"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center|left"
                android:inputType="text"
                android:hint="Please Enter Address "
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/changepass_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="@color/light_pink"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/update_btn"
            android:layout_width="200dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/round_pink_solid"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</ScrollView>